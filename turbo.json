{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "scripts/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "outputs": ["dist/**", "dist-electron/**"],
      "cache": true
    },
    "build:dev": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**",
        "scripts/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "outputs": ["release/**"],
      "cache": true,
      "env": ["NODE_ENV"]
    },
    "build:release": {
      "dependsOn": ["build"],
      "inputs": [
        "src/**",
        "scripts/**",
        "package.json",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "outputs": ["release/**"],
      "cache": true,
      "env": ["NODE_ENV", "CLOUDFLARE_*", "R2_*"]
    },
    "typecheck": {
      "inputs": ["src/**", "tsconfig.json"],
      "cache": true
    },
    "lint": {
      "inputs": ["src/**", ".eslintrc*", "eslint.config.*"],
      "cache": true
    }
  }
}
