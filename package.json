{
  "name": "cryptovertx",
  "version": "1.0.1",
  "description": "A sleek cryptocurrency converter desktop app",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron .",
    "electron:dev": "vite --mode development && electron .",
    "electron:build": "cross-env NODE_ENV=production tsx scripts/build.ts",
    "electron:build-installer": "cross-env NODE_ENV=production tsx scripts/build.ts --installer",
    "electron:build-portable": "cross-env NODE_ENV=production tsx scripts/build.ts --portable",
    "electron:build-all": "cross-env NODE_ENV=production tsx scripts/build.ts --both",
    "build-app": "cross-env NODE_ENV=production tsx scripts/build.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^6.3.1",
    "@mui/styles": "^6.3.1",
    "@types/lodash": "^4.17.13",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.6.2",
    "date-fns": "^4.1.0",
    "focus-trap-react": "^10.3.1",
    "framer-motion": "^12.4.10",
    "lightweight-charts": "^5.0.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.1.2",
    "react-icons": "^5.3.0",
    "react-router-dom": "^7.0.1",
    "recharts": "^2.13.3",
    "styled-components": "^6.1.13",
    "systeminformation": "^5.25.11"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.17.7",
    "@types/ora": "^3.2.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "chalk": "^5.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "rcedit": "^4.0.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "keywords": [
    "crypto",
    "converter",
    "electron",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.cryptovertx.app",
    "productName": "CryptoVertX",
    "asar": true,
    "compression": "store",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/assets",
        "to": "assets"
      }
    ],
    "executableName": "CryptoVertX",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CryptoVertX",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "electronVersion": "27.1.2",
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "forceCodeSigning": false
  }
}