{
  "name": "Crypto-Converter-app",
  "version": "1.0.0",
  "description": "A sleek cryptocurrency converter desktop app",
  "main": "./dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "electron .",
    "electron:dev": "vite build && vite --mode development && electron .",
    "electron:build": "vite build && electron-builder --win portable",
    "electron:build-installer": "vite build && electron-builder --win nsis"
  },
  "dependencies": {
    "@types/lodash": "^4.17.13",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "styled-components": "^6.1.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.39",
    "@types/react-dom": "^18.2.17",
    "@types/styled-components": "^5.1.32",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-plugin-electron": "^0.15.4",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "keywords": [
    "crypto",
    "converter",
    "electron",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.cryptoconverter.app",
    "productName": "Crypto Converter",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "src/assets/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
